  --foreground: 0 0% 100%;
  --card: 0 0% 8%;
  --card-foreground: 0 0% 100%;
  --popover: 0 0% 8%;
  --popover-foreground: 0 0% 100%;
  
  --primary: 220 13% 80%;
  --primary-foreground: 0 0% 0%;
  --secondary: 0 0% 12%;
  --secondary-foreground: 0 0% 95%;
  
  --muted: 0 0% 15%;
  --muted-foreground: 0 0% 70%;
  --accent: 0 0% 18%;
  --accent-foreground: 0 0% 100%;
  
  --destructive: 0 72% 51%;
  --destructive-foreground: 0 0% 100%;
  
  --border: 0 0% 20%;
  --input: 0 0% 20%;
  --ring: 220 13% 70%;
  
  --text-primary: 0 0% 100%;
  --text-secondary: 0 0% 90%;
  --text-muted: 0 0% 70%;
  
  --shadow-xs: 0 1px 2px rgba(0, 0, 0, 0.3);
  --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.4), 0 1px 2px rgba(0, 0, 0, 0.3);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.5), 0 2px 4px -2px rgba(0, 0, 0, 0.4);
  
  --sidebar-background: 0 0% 0%;
  --sidebar-foreground: 0 0% 100%;
  --sidebar-primary: 220 13% 80%;
  --sidebar-primary-foreground: 0 0% 0%;
  --sidebar-accent: 0 0% 12%;
  --sidebar-accent-foreground: 0 0% 100%;
  --sidebar-border: 0 0% 18%;
  --sidebar-ring: 220 13% 70%;
  
  --status-success: 142 71% 45%;
  --status-success-bg: 142 50% 12%;
  --status-success-border: 142 50% 20%;
  --status-success-text: 142 71% 65%;
  
  --status-warning: 38 92% 50%;
  --status-warning-bg: 38 70% 12%;
  --status-warning-border: 38 70% 20%;
  --status-warning-text: 38 92% 65%;
  
  --status-error: 0 72% 51%;
  --status-error-bg: 0 60% 12%;
  --status-error-border: 0 60% 20%;
  --status-error-text: 0 72% 65%;
  
  --status-info: 187 85% 45%;
  --status-info-bg: 187 60% 12%;
  --status-info-border: 187 60% 20%;
  --status-info-text: 187 85% 65%;
  
  --status-neutral: 0 0% 50%;
  --status-neutral-bg: 0 0% 12%;
  --status-neutral-border: 0 0% 20%;
  --status-neutral-text: 0 0% 70%;
  
  --status-special: 270 70% 55%;
  --status-special-bg: 270 50% 12%;
  --status-special-border: 270 50% 20%;
  --status-special-text: 270 70% 70%;
}

/* ============================================
   2. RESET CSS BASE
   ============================================ */

*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  font-size: 16px;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body.nexo-av-theme,
body.nexo-av-theme-dark {
  background-color: hsl(var(--background));
  color: hsl(var(--foreground));
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 13px;
  line-height: 1.5;
}

/* ============================================
   3. LAYOUT ESTRUCTURAL DESKTOP
   ============================================ */

/* Desktop grid (min-width: 1024px) */
@media (min-width: 1024px) {
  body.nexo-av-theme main,
  body.nexo-av-theme-dark main {
    margin-left: var(--sidebar-width);
    margin-top: var(--header-height);
    width: calc(100% - var(--sidebar-width));
    min-height: calc(100vh - var(--header-height));
  }
}

/* ============================================
   4. SISTEMA DE Z-INDEX
   ============================================ */

:root {
  --z-base: 1;
  --z-sidebar: 50;
  --z-header: 100;
  --z-tooltip: 999;
  --z-dropdown: 1000;
  --z-modal: 1001;
  --z-notification: 1002;
}

/* ============================================
   5. UTILIDADES GLOBALES MÍNIMAS
   ============================================ */

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

/* ============================================
   6. STATUS BADGES (Componentes Transversales)
   ============================================ */

body.nexo-av-theme .status-success,
body.nexo-av-theme-dark .status-success {
  background-color: hsl(var(--status-success-bg));
  border: 1px solid hsl(var(--status-success-border));
  color: hsl(var(--status-success-text));
}

body.nexo-av-theme .status-warning,
body.nexo-av-theme-dark .status-warning {
  background-color: hsl(var(--status-warning-bg));
  border: 1px solid hsl(var(--status-warning-border));
  color: hsl(var(--status-warning-text));
}

body.nexo-av-theme .status-error,
body.nexo-av-theme-dark .status-error {
  background-color: hsl(var(--status-error-bg));
  border: 1px solid hsl(var(--status-error-border));
  color: hsl(var(--status-error-text));
}

body.nexo-av-theme .status-info,
body.nexo-av-theme-dark .status-info {
  background-color: hsl(var(--status-info-bg));
  border: 1px solid hsl(var(--status-info-border));
  color: hsl(var(--status-info-text));
}

body.nexo-av-theme .status-neutral,
body.nexo-av-theme-dark .status-neutral {
  background-color: hsl(var(--status-neutral-bg));
  border: 1px solid hsl(var(--status-neutral-border));
  color: hsl(var(--status-neutral-text));
}

body.nexo-av-theme .status-special,
body.nexo-av-theme-dark .status-special {
  background-color: hsl(var(--status-special-bg));
  border: 1px solid hsl(var(--status-special-border));
  color: hsl(var(--status-special-text));
}

/* Status badge base */
body.nexo-av-theme .status-badge,
body.nexo-av-theme-dark .status-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.375rem;
  padding: 0.1875rem 0.5rem;
  font-size: 0.6875rem;
  font-weight: 500;
  letter-spacing: 0.02em;
  border-radius: 4px;
}

/* ============================================
   7. ESTILOS BASE DE FORMULARIOS
   (Inputs, textareas, selects - aplican a TODOS)
   ============================================ */

body.nexo-av-theme input,
body.nexo-av-theme textarea,
body.nexo-av-theme select,
body.nexo-av-theme-dark input,
body.nexo-av-theme-dark textarea,
body.nexo-av-theme-dark select {
  background-color: hsl(var(--card));
  border: 1px solid hsl(var(--border));
  color: hsl(var(--foreground));
  font-size: 0.8125rem;
  border-radius: 6px;
  padding: 0.5rem 0.75rem;
}

body.nexo-av-theme input:focus,
body.nexo-av-theme textarea:focus,
body.nexo-av-theme select:focus,
body.nexo-av-theme-dark input:focus,
body.nexo-av-theme-dark textarea:focus,
body.nexo-av-theme-dark select:focus {
  border-color: hsl(var(--ring));
  box-shadow: 0 0 0 2px hsl(var(--ring) / 0.12);
  outline: none;
}

body.nexo-av-theme input::placeholder,
body.nexo-av-theme textarea::placeholder,
body.nexo-av-theme-dark input::placeholder,
body.nexo-av-theme-dark textarea::placeholder {
  color: hsl(var(--text-muted));
}

body.nexo-av-theme label,
body.nexo-av-theme-dark label {
  font-size: 0.75rem;
  font-weight: 500;
  color: hsl(var(--text-secondary));
  margin-bottom: 0.25rem;
  display: block;
}

