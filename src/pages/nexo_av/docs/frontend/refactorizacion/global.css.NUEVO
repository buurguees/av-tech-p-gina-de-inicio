/* ============================================
   NEXO AV - GLOBAL STYLES v2.0 (Refactorizado)
   Desktop-only application (min-width: 1280px)
   
   CONTENIDO:
   1. Import de Componentes CSS
   2. Variables de Tema (Design Tokens)
   3. Reset CSS Base
   4. Layout Estructural Desktop
   5. Sistema de Z-Index
   6. Utilidades Globales Mínimas
   7. Status Badges (componentes transversales)
   8. Estilos Base de Formularios
   
   TOTAL: < 200 líneas
   ============================================ */

/* Import component-specific CSS */
@import './components/index.css';

/* ============================================
   1. VARIABLES DE TEMA - Design Tokens
   ============================================ */

body.nexo-av-theme {
  /* Base Colors */
  --background: 210 20% 98%;
  --foreground: 222 47% 11%;
  --card: 0 0% 100%;
  --card-foreground: 222 47% 11%;
  --popover: 0 0% 100%;
  --popover-foreground: 222 47% 11%;
  
  /* Primary & Secondary */
  --primary: 220 13% 26%;
  --primary-foreground: 0 0% 100%;
  --secondary: 210 20% 96%;
  --secondary-foreground: 222 47% 11%;
  
  /* Muted & Accent */
  --muted: 210 15% 94%;
  --muted-foreground: 215 14% 45%;
  --accent: 210 15% 93%;
  --accent-foreground: 222 47% 11%;
  
  /* Destructive */
  --destructive: 0 72% 51%;
  --destructive-foreground: 0 0% 100%;
  
  /* Borders & Inputs */
  --border: 214 15% 88%;
  --input: 214 15% 88%;
  --ring: 220 13% 40%;
  --radius: 0.5rem;
  
  /* Text Hierarchy */
  --text-primary: 222 47% 11%;
  --text-secondary: 215 14% 40%;
  --text-muted: 215 14% 55%;
  
  /* Shadows */
  --shadow-xs: 0 1px 2px rgba(0, 0, 0, 0.04);
  --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.06), 0 1px 2px rgba(0, 0, 0, 0.04);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -2px rgba(0, 0, 0, 0.03);
  
  /* Sidebar */
  --sidebar-background: 0 0% 100%;
  --sidebar-foreground: 222 47% 11%;
  --sidebar-primary: 220 13% 26%;
  --sidebar-primary-foreground: 0 0% 100%;
  --sidebar-accent: 210 15% 95%;
  --sidebar-accent-foreground: 222 47% 11%;
  --sidebar-border: 214 15% 91%;
  --sidebar-ring: 220 13% 40%;
  
  /* Status Colors - Traffic Light System */
  --status-success: 152 69% 31%;
  --status-success-bg: 149 80% 95%;
  --status-success-border: 149 60% 80%;
  --status-success-text: 152 69% 24%;
  
  --status-warning: 32 95% 44%;
  --status-warning-bg: 48 100% 96%;
  --status-warning-border: 40 90% 75%;
  --status-warning-text: 25 85% 30%;
  
  --status-error: 0 72% 51%;
  --status-error-bg: 0 86% 97%;
  --status-error-border: 0 60% 85%;
  --status-error-text: 0 72% 38%;
  
  --status-info: 187 70% 36%;
  --status-info-bg: 187 70% 96%;
  --status-info-border: 187 60% 82%;
  --status-info-text: 187 70% 28%;
  
  --status-neutral: 215 14% 45%;
  --status-neutral-bg: 210 15% 96%;
  --status-neutral-border: 210 15% 85%;
  --status-neutral-text: 215 14% 35%;
  
  --status-special: 270 60% 50%;
  --status-special-bg: 270 80% 97%;
  --status-special-border: 270 50% 85%;
  --status-special-text: 270 60% 38%;
  
  /* Layout Dimensions */
  --header-height: 3.25rem;
  --sidebar-width: 14rem;
}

